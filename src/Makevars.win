ifeq "$(WIN)" "64"
  PKG_CPPFLAGS += -DWIN32 -DINLINE=static -DAVOID_WIN32_FILEIO -DTIFF_OK -I"c:/rtools/local64/include"
  PKG_LIBS += -L"c:/rtools/local64/lib" -llapacke -llapack -lrefblas -ltiff -ljpeg -lm
else
  PKG_CPPFLAGS += -DWIN32 -DINLINE=static -DAVOID_WIN32_FILEIO -DTIFF_OK -I"c:/rtools/local/include"
  PKG_LIBS += -L"c:/rtools/local/lib" -llapacke -llapack -lrefblas -ltiff -ljpeg -lm
endif

